- model_class = Perodization
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @perodization.user_id
%p
  %strong= model_class.human_attribute_name(:muscle_group_id) + ':'
  %br
  = @perodization.muscle_group_id
%p
  %strong= model_class.human_attribute_name(:perodization_phase) + ':'
  %br
  = @perodization.perodization_phase

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), perodizations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_perodization_path(@perodization), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), perodization_path(@perodization), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
