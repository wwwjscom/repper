- model_class = Perodization
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:muscle_group_id)
      %th= model_class.human_attribute_name(:perodization_phase)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @perodizations.each do |perodization|
      %tr
        %td= link_to perodization.id, perodization_path(perodization)
        %td= perodization.user_id
        %td= perodization.muscle_group_id
        %td= perodization.perodization_phase
        %td=l perodization.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_perodization_path(perodization), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), perodization_path(perodization), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_perodization_path, :class => 'btn btn-primary'
