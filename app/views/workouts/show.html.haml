- model_class = Workout
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @workout.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), workouts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_workout_path(@workout), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), workout_path(@workout), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
