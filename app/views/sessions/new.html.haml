/ Log in
#login.page.color-2
  .inner-page
    %h2.page-headline Back for more?
  .row-fluid.inner-page.contact
    .span3
    .span6
      = form_tag sessions_path do
        = email_field_tag :email, params[:email], :placeholder => "your@email.com"
        %br/
        = password_field_tag :password, nil, :placeholder => "Password"
        %br/
        = label_tag :remember_me
        = check_box_tag :remember_me, 1, params[:remember_me]
        %br/
        = submit_tag "Log in", :class => 'btn'
        /%button.btn.btn-centered Log in
    .span3


