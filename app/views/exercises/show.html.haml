- model_class = Exercise
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @exercise.name
%p
  %strong= model_class.human_attribute_name(:muscle_group) + ':'
  %br
  = @exercise.muscle_group
%p
  %strong= model_class.human_attribute_name(:skill_level) + ':'
  %br
  = @exercise.skill_level
%p
  %strong= model_class.human_attribute_name(:machine) + ':'
  %br
  = @exercise.machine
%p
  %strong= model_class.human_attribute_name(:weights_required) + ':'
  %br
  = @exercise.weights_required
%p
  %strong= model_class.human_attribute_name(:weight_adjustment) + ':'
  %br
  = @exercise.weight_adjustment

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), exercises_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_exercise_path(@exercise), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), exercise_path(@exercise), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
