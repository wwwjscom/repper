- model_class = WorkoutUnit
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:workout_id)
      %th= model_class.human_attribute_name(:exercise_id)
      %th= model_class.human_attribute_name(:rep_1)
      %th= model_class.human_attribute_name(:weight_1)
      %th= model_class.human_attribute_name(:rep_2)
      %th= model_class.human_attribute_name(:weight_2)
      %th= model_class.human_attribute_name(:rep_3)
      %th= model_class.human_attribute_name(:weight_3)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @workout_units.each do |workout_unit|
      %tr
        %td= link_to workout_unit.id, workout_unit_path(workout_unit)
        %td= workout_unit.workout_id
        %td= workout_unit.exercise_id
        %td= workout_unit.rep_1
        %td= workout_unit.weight_1
        %td= workout_unit.rep_2
        %td= workout_unit.weight_2
        %td= workout_unit.rep_3
        %td= workout_unit.weight_3
        %td=l workout_unit.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_workout_unit_path(workout_unit), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), workout_unit_path(workout_unit), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_workout_unit_path, :class => 'btn btn-primary'
