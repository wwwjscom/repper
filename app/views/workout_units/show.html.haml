- model_class = WorkoutUnit
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:workout_id) + ':'
  %br
  = @workout_unit.workout_id
%p
  %strong= model_class.human_attribute_name(:exercise_id) + ':'
  %br
  = @workout_unit.exercise_id
%p
  %strong= model_class.human_attribute_name(:rep_1) + ':'
  %br
  = @workout_unit.rep_1
%p
  %strong= model_class.human_attribute_name(:weight_1) + ':'
  %br
  = @workout_unit.weight_1
%p
  %strong= model_class.human_attribute_name(:rep_2) + ':'
  %br
  = @workout_unit.rep_2
%p
  %strong= model_class.human_attribute_name(:weight_2) + ':'
  %br
  = @workout_unit.weight_2
%p
  %strong= model_class.human_attribute_name(:rep_3) + ':'
  %br
  = @workout_unit.rep_3
%p
  %strong= model_class.human_attribute_name(:weight_3) + ':'
  %br
  = @workout_unit.weight_3

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), workout_units_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_workout_unit_path(@workout_unit), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), workout_unit_path(@workout_unit), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
