- model_class = MuscleGroup
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @muscle_group.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), muscle_groups_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_muscle_group_path(@muscle_group), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), muscle_group_path(@muscle_group), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
